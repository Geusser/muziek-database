
<div class="content">
  <div  id='search_container'>
    <%= form_tag songs_sort_path, method: :get do %>
      <%= submit_tag 'Search', :name => nil, :id => 'search_submit' %>
      <%= text_field_tag :search, params[:search], :id => 'search_bar', :placeholder => 'Zoeken...' %>
      <!-- <input type="text" id="search_bar" placeholder="Zoeken..."> -->
    <% end %>
  </div>
  <table class="output">
    <tr>
      <th>Nummer</th>
      <th>Genre</th>
      <th>Score</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
    <% @songs.each do |song| %>
    <tr>
      <td><%= song.artist %> - <%= song.name %></td>
      <td><%= song.genre %></td>
      <td><%= song.score %></td>
      <td><%= song.rating %></td>
      <td><%= link_to 'Show entry', song_path(song) %></td>
      <td><%= link_to 'Edit entry', edit_song_path(song) %> </td>
      <td><%= link_to 'Delete entry', song_path(song),
              method: :delete,
              data: { confirm: 'Weet je zeker dat je dit nummer wilt verwijderen?' }%></td>
    </tr>
    <% end %>
  </table>
</div>
