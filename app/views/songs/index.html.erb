
<table class="content">
  <tr>
    <th>Artiest(en)</th>
    <th>Naam</th>
    <th>Album</th>
    <th>Genre</th>
    <th>Rating</th>
    <th colspan="3"></th>
  </tr>
  <% @songs.each do |song| %>
  <tr>
    <td><%= song.artist %></td>
    <td><%= song.name %></td>
    <td><%= song.album %></td>
    <td><%= song.genre %></td>
    <td><%= song.rating %></td>
    <td><%= link_to 'Show entry', song_path(song) %></td>
    <td><%= link_to 'Edit entry', edit_song_path(song) %> </td>
    <td><%= link_to 'Delete entry', song_path(song),
            method: :delete,
            data: { confirm: 'Weet je zeker dat je dit nummer wilt verwijderen?' }%></td>
  </tr>
  <% end %>
</table>
